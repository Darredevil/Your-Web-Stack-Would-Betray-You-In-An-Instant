@import url("http://fonts.googleapis.com/css?family=Patua+One");

.bespoke-slide {
  background-color: rgba(255, 255, 255, 0);
  padding: 20px;

  aside {
      display: none;
  }
}

.todo:before {
  content: "TODO: "
  color: #f00;
  font-style: italic;
  font-weight: bolder;
}

.title {
  text-align: left;
  font-weight: normal;
  font-family: 'Patua One', serif;
}

h2.full-slide {
  font-size: 70pt;
  font-weight: bold;
}

ul {
  margin: 10px 0;
  text-align: left;
}

address {
  margin-top: 20px;
  float: left;
  text-align: right;
  width: 100%;
  font-style: normal;
  line-height: 150%

  .bio {
    opacity: 0.7;
  }
  
  .author {
    font-size: 120%;
  }

  .author, a {
    font-weight: bolder;
  }

  a {
    color: inherit;
    &:hover {
      font-style: underline;
    }
  }

  .urls {
    padding-top: 26px;
  }

  ul {
    width: 100%;
    position: relative;

    list-style: none;

    li {
      float: left;
      text-align: center;
      width: 33.3%;

      &:first-child {
        text-align: left;
      }
      &:last-child {
        text-align: right;
      }
    }
  }
}

pre {
  padding: 26px 20px !important;
  font-size: 16px;
}          

.sideBySide {
  flex-direction: row;
  width: 100%;

  pre {
    width: 48%;
    margin: 0.5em 0.4em;
    padding: 26px 10px;
    font-size: 52%;
    float: left;
    display: inline-block;
  }
}

.stack {
  &.corner {
    position: absolute;
    bottom: 15px;
    left: 25px;
    line-height: 82%;
  }

  font-size: 1.1em;
  font-weight: bolder;

  li {
    padding: 0;
    margin: 0;
  }

  .lowlight {
    color: #aaa;
  }
}

.bespoke-active.instant {
  transition: none;
  background-color: #fff;
}

.topic-slide {
  background-color: #f3b840;
}
